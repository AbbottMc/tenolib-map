{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": false,
    "declaration": true,
    "incremental": false,
    "lib": [
      "ES6", "ES2021", "ES2022"
    ],
    "allowJs": true,
    "outDir": "dist",
    "declarationDir": "types/generated"
  },
  "exclude": [
    "backup", "dist", "package.json", "tsconfig.json", "types", "webpack.config.js"
  ]
}